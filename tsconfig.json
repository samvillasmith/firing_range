{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "lib": ["es2020"],
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}